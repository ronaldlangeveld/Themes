{{!< default}} <div class="content-area">
    <main class="site-main">
        <div class="post-feed">
            {{#page}}
            <header class="article-header gh-canvas">
                <h1 class="page-title">{{title}}</h1>
            </header>
            <div style="margin-bottom:50px;" class="gh-content gh-canvas">
                {{content}}
            </div>
            {{/page}}
            {{#foreach posts}}
            <div>
            <article class="post">
                {{#if feature_image}}
                <figure class="kg-card kg-image-card kg-width-full kg-card-hascaption">
                    <div class="u-placeholder horizontal kg-width-full">
                        <a class="post-image-link" href="{{url}}">
                            <img class="post-image u-object-fit" srcset="{{img_url feature_image size=" s"}} 400w,
                                {{img_url feature_image size="m" }} 750w, {{img_url feature_image size="l" }} 960w,
                                {{img_url feature_image size="xl" }} 1140w, {{img_url feature_image size="xxl" }} 1920w"
                                sizes="(min-width: 960px) 960px, 92vw" src="{{img_url feature_image size=" l"}}"
                                alt="{{title}}" loading="lazy">
                        </a>
                    </div>
                    <figcaption>
                         <time datetime="{{date format="YYYY-MM-DD"}}"><strong>{{date published_at}}</strong></time>
                        {{custom_excerpt}}
                    </figcaption>
                </figure>
                {{/if}}
            </article>
            </div>
            {{/foreach}}
        </div>
    </main>
    </div>