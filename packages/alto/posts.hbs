{{!< default}} <div class="content-area">
    <main class="site-main">
        <div class="post-feed">
            {{#page}}
            <header class="article-header gh-canvas">
                <h1 class="page-title">{{title}}</h1>
            </header>
            <div class="gh-content gh-canvas">
                {{content}}
            </div>
            {{/page}}
            {{#foreach posts}}
            <article style="margin-top: 30px;" class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                <div class="gh-canvas">
                    <header class="post-header">
                        <h2 class="post-title">
                            <a class="post-title-link" href="{{url}}">{{title}}</a>
                        </h2>
                        <div class="post-meta">
                            <span class="post-meta-item post-meta-date">
                                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date published_at}}</time>
                            </span>
                            {{#if reading_time}}
                            <span class="post-meta-item post-meta-length">{{reading_time}}</span>
                            {{/if}}
                            {{#if @site.comments_enabled}}
                            {{comment_count class="post-meta-item"}}
                            {{/if}}
                            {{#primary_tag}}
                            <span class="post-meta-item post-meta-tags"><a class="post-tag post-tag-{{slug}}"
                                    href="{{url}}" title="{{name}}">{{name}}</a></span>
                            {{/primary_tag}}
                        </div>
                    </header>

                    {{#if excerpt}}
                    <div class="post-excerpt">
                        {{excerpt words="33"}}
                    </div>
                    {{/if}}
                </div>

            </article>
            {{/foreach}}
        </div>
    </main>
    </div>